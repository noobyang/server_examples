<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace属性是名称空间，必须唯一 -->
<mapper namespace="com.noobyang.entity.Student">

    <select id="findById" parameterType="int" resultType="com.noobyang.entity.Student">
        select * from student where id = #{id}
    </select>

    <insert id="add" parameterType="com.noobyang.entity.Student">
        insert into student (id, name, sal) values (#{id},#{name},#{sal});
    </insert>

</mapper>